{
  "name": "video-to-gif",
  "version": "1.0.0",
  "description": "Convert MP4 or MOV videos to high-quality timelapse GIFs using FFmpeg",
  "main": "src/video2gif.js",
  "bin": {
    "video2gif": "./bin/video2gif.js"
  },
  "scripts": {
    "start": "node src/video2gif.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\" \"tests/**/*.js\"",
    "prepare": "husky"
  },
  "keywords": [
    "video",
    "gif",
    "converter",
    "ffmpeg",
    "mp4",
    "mov",
    "timelapse",
    "cli"
  ],
  "author": "luongnv89",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luongnv89/video-to-gif.git"
  },
  "bugs": {
    "url": "https://github.com/luongnv89/video-to-gif/issues"
  },
  "homepage": "https://github.com/luongnv89/video-to-gif#readme",
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "bin/",
    "src/",
    "docs/"
  ],
  "dependencies": {
    "cli-progress": "^3.12.0",
    "commander": "^12.1.0",
    "fluent-ffmpeg": "^2.1.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
